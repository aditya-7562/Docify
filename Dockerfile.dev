# Development Dockerfile for Docify (Next.js only)
FROM node:18-alpine

WORKDIR /app

# Install runtime utilities needed during development
RUN apk add --no-cache bash git curl

# Copy dependency manifests first to leverage caching
COPY package*.json ./

# Install ALL deps (dev + prod)
RUN npm ci || npm install

# Copy source code
COPY . .

# Next.js development server port
EXPOSE 3000

ENV NODE_ENV=development

# Run Next.js dev server
CMD ["npm", "run", "dev"]
